@model ElectivaProfesional.Models.Calculadora /* especifica que la vista está tipada al modelo Calculador. */

@{
    ViewData["Title"] = "Home Page"; /* El titulo de la página. */
}
 <style> /* los estilos de la página */
    label {
        color: white; 
        font-size: large;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    input {
         overflow: hidden;
        text-decoration: none;
        color: black;
        padding: 10px 20px;
        border-radius: 30px;
        box-shadow: 
         0 0 0 0 rgba(143, 64, 248, 0.5),
        0 0 0 0 rgba(39, 200, 255, 0.5);
        transition: 
        transform 0.3s ease,
        box-shadow 0.3s ease;
    }

    input:hover{
        transform: translate(0, -6px);
    box-shadow: 10px -10px 25px 0 rgba(143, 64, 248, 0.5),
               -10px 10px 25px 0 rgba(39, 200, 255, 0.5);
    }

    .text-center{
        background-color: rgba(0, 0, 0, 0.477);
        width: 33%;
        margin: 10px auto ;
        border-radius: 80px;
       
    }

    .wallpaper {
        background-image: url('https://cdn.pixabay.com/photo/2017/08/30/01/05/milky-way-2695569_1280.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
        margin: 50px auto;
        width: 100%;
        height: 600px;
    }
    h1{
        color: white;
    }
    
 </style>
 <div class="wallpaper"> 
    <div class="text-center">
         <!-- Contenido HTML aquí -->
        <br>
        <h1 class="display-4">Calculadora</h1>
        <br>
        <br>

        <form asp-controller="Calculadora" asp-action="Calcular"> 
        <!-- Contenido del formulario con etiquetas, entradas y un botón de envío -->
          
            <label>
                Operación 1
            </label>
            <input asp-for="Opr1">
            <br>
            <br>

            <label>
                Operación 2
            </label>
            <input asp-for="Opr2">
            <br>
            <br>

            <label>Accion a escoger</label>
            <select asp-for="Action">
            
                <option value=""></option>
                <option value="+">+</option>
                <option value="-">-</option>
                <option value="*">x</option>
                <option value="/">/</option>

            </select>
            <br>
            <br>
            <br>

            <input type="submit" value="Calcular">
        
        </form>
        <!-- muestra el resultado de la operación -->    
        <td><span style="color: rgb(255, 255, 255);">@Html.DisplayNameFor(model => model.Respuesta)</span></td>
        <td><span style="color: blue;">@Html.DisplayTextFor(model => model.Respuesta)</span></td>




    </div>  
</div>
    
